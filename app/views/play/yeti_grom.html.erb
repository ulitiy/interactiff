<!doctype html>
<html>
    <head>
        <meta charset=utf-8>
		<title><%=head_title " | #{@game.name}"%></title>
        <meta name=description content="">
        <meta name=viewport content="width=device-width, initial-scale=1">
        <link rel=stylesheet href="/yeti_grom_css/layout.css">
    </head>
    <body>
	<% head_title "#{@game.name} | " if @task %> 
	<div class="row-fluid-yeti">
	<a class="logo" href="http://arg-yeti.ru/"></a>
         <h1><%= @game.name %></h1>
	<div class="window_yeti">
		  <h2><%= @task.name %></h2>
	 
	 <% if flash[:messages] %>
            <% for message in flash[:messages] %>
              <% next if message[:message].empty? %>
              <div class="alert alert-<%= message[:message_type] %>">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= message[:message] %>
              </div>
            <% end %>
          <% end %> 
      <%= form_tag play_submit_path(task_id: @task.id) do %>
        <% @handler.hints_given.zip(@handler.hint_events).each do |hint,event| %>
          <% next if hint.body.empty? %>
          <%= raw hint.body_with_vars(game: @game, user: current_user, handler: @handler) %>
        <% end %>
        
        <% if @handler.task_answers.count>0 %>
          <ul class="menu">
          <% if @task.input_type=="link" %>
		  <% for answer in @handler.task_answers %>
            <% bwv=answer.body_with_vars(game: @game, user: current_user, handler: @handler) %>
              <li><%= link_to raw(bwv),
                                  play_submit_path(task_id:@task.id, input: raw(answer.digest))
                                  %></li>
            <% end %>
          <% elsif @task.input_type=="text" %>
		 
            <li>
              <a>
              <%= text_field_tag "input" %>
              <button class="btn btn-success">Отправить в штаб</button>
              </a>
            </li>
          <% end %>
          </ul>
        <% end %>

      <% end %>
	  
    </body>
</html>