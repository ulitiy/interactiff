  <div class="container">
    <div class="row-fluid w">
      <div class="span4">
        <a href="https://interactiff.net/"><img src="/assets/logo2.png" alt=""></a>
      </div>
    </div>
    <div class="row-fluid w">
      <div class="span8">
        <h2>До начала квеста осталось:</h2><!-- <%= @game.name %> -->
        <div class="counter" id="counter" data-time="<%= @start_time %>">
          <div class="digit"><div class="count days">∞</div><div class="unit days">дней</div></div>
          <div class="colon"> : </div>
          <div class="digit"><div class="count hours">∞</div><div class="unit hours">часов</div></div>
          <div class="colon"> : </div>
          <div class="digit"><div class="count minutes">∞</div><div class="unit minutes">минут</div></div>
          <div class="colon"> : </div>
          <div class="digit"><div class="count seconds">∞</div><div class="unit seconds">секунд</div></div>
        </div>
      </div>
    </div>
    <div class="not-started-box"></div>
  </div>


