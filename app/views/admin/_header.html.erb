<div class="header2" id="header" >
  <div class="row-fluid">
    <div class="span4"><a href=""><img class="hlogo" src="/assets/logo_sign.png" alt=""></a><h1 class="elipsis"><a id="game-name" data-text="model.name" data-title="model.name" href="" title=""></a></h1></div>
    <div class="span8 nest">
      <ul class="header-navigation">
        <%if @game.present?%>
          <li class="active">
            <%= link_to "Конструктор", admin_path(parent_id: @game.id, select_id: 0), id: "designer-link" %>
            <div class="palka"></div>
          </li>
          <li>
            <%= link_to "Тестирование", play_game_path(game_id: @game.id), target: "_blank", id: "test-link" %>
            <div class="palka"></div>
          </li>
        <% end %>
      </ul>
      <a id="reload" href="" class="refresh pull-right pull-lower10"></a>
    </div>
  </div>
</div>
