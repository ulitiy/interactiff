<% content_for :body_class, "home" %>
<% content_for :blue_wrap do %>
  <section class="center-me">

    <div id="slider" class="carousel slide">
      <div class="carousel-inner">
        <div class="active item center-me"><img src="/assets/slide-1.png"></div>
        <div class="item center-me"><img src="/assets/slide-2.png"></div>
        <div class="item center-me"><img src="/assets/slide-3.png"></div>
        <div class="item center-me"><img src="/assets/slide-4.png"></div>
        <div class="item center-me"><img src="/assets/slide-5.png"></div>
        </div>
      <a class="carousel-control left" href="#slider" data-slide="prev"></a>
      <a class="carousel-control right" href="#slider" data-slide="next"></a>
    </div>

    <div id="carousel-nav">
    <a href="#slider" data-to="1" class="active"></a>
    <a href="#slider" data-to="2"></a>
    <a href="#slider" data-to="3"></a>
    <a href="#slider" data-to="4"></a>
    <a href="#slider" data-to="5"></a>
    </div>

  </section>
<% end %>


<%= raw @page.content_for :body %>


