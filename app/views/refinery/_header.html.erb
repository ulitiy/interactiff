<header class="row-fluid">
  <div class="span3 logo"><%= link_to refinery.root_path(locale: ::I18n.locale) do %><img src="/assets/logo.png"><% end %></a></div>
  <div class="span6 center-me">
    <div class="navbar">
      <div class="navbar-inner">
        <ul class="nav">
          <% if can? :create, Game %>
            <li><%= link_to t("games.index"), main_app.games_path %></li>
          <% end %>
          <li><%= link_to t('header.about'), refinery.marketable_page_path(path: "about_us") %></li>
          <li><%= link_to t('header.news'), refinery.news_root_path %></li>
          <li class="dropdown"><a href="" class="dropdown-toggle" data-toggle="dropdown"><i class="flags <%= ::I18n.locale %>"></i><%= t("i18n.language.short_name") %></a>
            <ul class="dropdown-menu">
              <li><%= link_to rlink.url_for locale: :ru do %><i class="flags ru"></i><%= t("i18n.language.name", locale: :ru) %><% end %></li>
              <li><%= link_to rlink.url_for locale: :en do %><i class="flags en"></i><%= t("i18n.language.name", locale: :en) %><% end %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="span3">
    <%=
      if !current_user || current_user.is_a?(Guest)
        link_to t('header.sign_in_or_up'), main_app.new_user_session_path, class: "btn pull-right"
      else
        link_to t('header.sign_out'), main_app.destroy_user_session_path, :method => :delete, class: "btn pull-right"
      end
    %>
</div>
</header>
