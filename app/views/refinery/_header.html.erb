<header class="row-fluid">
  <div class="span3 logo"><a href="/"><img src="/assets/logo.png"></a></div>
  <div class="span6 center-me">
    <div class="navbar">
      <div class="navbar-inner">
        <ul class="nav">
          <% if can? :create, Game %>
            <li><%= link_to t("games.index"), main_app.games_path %></li>
          <% end %>
          <li><a href="">Тарифы</a></li>
          <li><a href="">Помощь</a></li>
          <li class="dropdown"><a href="" class="dropdown-toggle" data-toggle="dropdown"><i class="flags <%= ::I18n.locale %>"></i><%= t("i18n.language.short_name") %></a>
            <ul class="dropdown-menu">
              <li><%= link_to url_for locale: :ru, asdfasdf: nil do %><i class="flags ru"></i><%= t("i18n.language.name", locale: :ru) %><% end %></li>
              <li><%= link_to url_for locale: :en do %><i class="flags en"></i><%= t("i18n.language.name", locale: :en) %><% end %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="span3">
    <%=
      if !current_user || current_user.is_a?(Guest)
        link_to "Вход или регистрация", main_app.new_user_session_path, class: "btn pull-right"
      else
        link_to "Выйти", main_app.destroy_user_session_path, :method => :delete, class: "btn pull-right"
      end
    %>
</div>
</header>
