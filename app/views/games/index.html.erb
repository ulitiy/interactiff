<%- title t('games.index') %>
<div class="allwrap">
  <!-- NAVIGATION-BAR -->
  <div class="navigation-bar">
    <ul class="navigation-list">
      <li><%= link_to t('header.home'), refinery.root_path %></li>
      <li><%= link_to t("games.index"), games_path %></li>
    </ul>

    <ul class="navigation-list nl-right">
      <li class="premium-btn"><%= link_to refinery.marketable_page_path(path: "premium") do image_tag "btn_premium.png" end %></li>
      <li class="dropdown"><a href="" class="dropdown-toggle" data-toggle="dropdown"><i class="flags  <%= ::I18n.locale %>"></i></a>
        <ul class="dropdown-menu t2dd">
          <li><%= link_to url_for locale: :ru do %><i class="flags ru"></i><%= t("i18n.language.name", locale: :ru) %><% end %></li>
          <li><%= link_to url_for locale: :en do %><i class="flags en"></i><%= t("i18n.language.name", locale: :en) %><% end %></li>
        </ul>
      </li>
      <li><%= link_to t('header.sign_out'), destroy_user_session_path, :method => :delete %></li>
    </ul>
  </div>
  <!-- HEADER2 -->
  <div class="header2" id="header" >
    <div class="row-fluid">
      <div class="span4">
        <a href=""><img class="hlogo" src="/assets/logo_sign.png" alt=""></a>
        <h1 class="elipsis">
          <a id="game-name" data-text="model.name" data-title="model.name" href="" title=""><%=t('games.index')%></a>
        </h1>
      </div>
    </div>
  </div>
  <div class="editor-content editor">
    <div class="editor">
      <% active = @games.blank? ? 'active' : '' %>
      <%=link_to new_game_path, remote: true, class: "btn-toggle movetoheader #{active}" do%>
        <i class="icon-plus"></i> <%=t('games.create_quest')%>
      <%end%>
      <% if @games.blank? %>
        <div id="add-quest-form">
          <% @game = Game.new %>
          <%= render 'form' %>
        </div>
      <% else %>
        <div id="add-quest-form" class="hide">
        </div>
      <% end %>
      <ul class="quest-list">
        <% for game in @games %>
          <li>
            <div class="pic" style="">
              <%=image_tag game.cover_url(:thumb)%>
            </div>
            <div class="desc">
              <h3><%=link_to game.name, main_app.admin_path(parent_id: game.id, select_id: 0)%></h3>
              <p class="category"><%=t("enumerize.game.category.#{game.category}")%></p>
              <div class="stars r4-5"></div>
              <p class="last-edit"><%=t('games.last_update')%> <%= game.updated_at.strftime("%d.%m.%Y") %></p>
            </div>
            <div class="button-panel">
              <%= link_to t('games.builder'), main_app.admin_path(parent_id: game.id, select_id: 0), class: "btn" %>
              <%= link_to t('games.testing'), play_game_path(game_id: game.id), class: "btn"%>
              <%= link_to t('games.delete'), game_path(id: game.id), method: :delete, confirm: t('games.delete_confirm'), class: 'btn-super-flat' %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="push"></div>
</div>
<%=render 'admin/footer'%>
</body>
</html>